    <servlet>
        <servlet-name>FilterCategory</servlet-name>
        <servlet-class>controller.FilterCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Detail</servlet-name>
        <servlet-class>controller.Detail</servlet-class>
